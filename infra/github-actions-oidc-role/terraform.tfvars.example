# Copy this file to terraform.tfvars and customize the values

# Your GitHub username or organization name (REQUIRED)
# This restricts the OIDC role to repos in your GitHub account only
github_username = "your-github-username"

# AWS region (optional, defaults to us-east-1)
aws_region = "us-east-1"

# Custom role name (optional, defaults to github-actions-oidc-role)
role_name = "github-actions-oidc-role"

# Custom role description
role_description = "IAM role for GitHub Actions OIDC authentication"

# Maximum session duration in seconds (3600-43200)
max_session_duration = 3600

# List of IAM policy ARNs to attach to the role
# Uncomment and customize as needed:
attached_policy_arns = [
  # "arn:aws:iam::aws:policy/AmazonS3ReadOnlyAccess",
  # "arn:aws:iam::aws:policy/CloudWatchLogsReadOnlyAccess",
]
